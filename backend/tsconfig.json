// backend/tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",

    // ðŸ‘‡ CRUCIAL ADDITION FOR MONOREPO WORKSPACES ðŸ‘‡
    "baseUrl": ".",
    "paths": {
      // This tells TS to use the compiled output from the shared package
      "@memedo/shared": ["../shared/dist"]
    }
    // ðŸ‘† END CRUCIAL ADDITION ðŸ‘†
  },

  // âœ… Only compile backend src files. Shared package is built separately.
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

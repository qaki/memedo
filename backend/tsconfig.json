// backend/tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",

    // âŒ REMOVED: This causes TS6059 error because linked files are outside this directory.
    // "rootDir": "./src",

    // ğŸ‘‡ CRUCIAL ADDITION FOR MONOREPO WORKSPACES ğŸ‘‡
    "baseUrl": ".",
    "paths": {
      // This tells TS how to resolve the imports (e.g., import { z } from '@memedo/shared')
      "@memedo/shared": ["../shared/src"]
    }
    // ğŸ‘† END CRUCIAL ADDITION ğŸ‘†
  },

  // âœ… MODIFIED: This tells TS to compile files in 'src' AND resolve types from '../shared/src'.
  "include": ["src/**/*", "../shared/src/**/*"],
  "exclude": ["node_modules"]
}
